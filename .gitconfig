[include]
        path = ~/.gitconfig.local
[color]
        ui = always
[color "diff"]
       #meta = yellow 
       #frag = magenta bold
       old = red
       new = green
[color "grep"]
        filename = red
        linenumber = red
        match = yellow reverse
        context = cyan
        #selected = white bold
[alias]
        co = checkout
        current-branch = !git symbolic-ref HEAD|sed -e 's/refs.heads.//'
        br = branch
        ci = commit -a
        df = diff
        dw = diff --color-words
        idff = diff       
        dwc = diff -w -M --color-words
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        ll = log -p
        rb = rebase
        ggrep = grep --heading --break
        fix = rebase -i origin/master
        rba = rebase --abort
        rbc = rebase --continue
        re = remote
        st = status -sb
        sup = "submodule foreach 'git co master; git up'"
        #sup = submodule foreach git pull origin master
        todo = grep --ignore-case "TODO"
        tree = log --graph --decorate --pretty=oneline --abbrev-commit --all
        undopush = push -f origin HEAD^:master
        up = pull --rebase
[core]
        editor = emacs
        excludesfile = /Users/ronshapiro/.gitignore
        pager = less -+$LESS -FRX
[rerere]
        enabled = 1
[branch "master"]
        remote = origin
        merge = refs/heads/master
[grep]
        lineNumber = true
[blame]
        date = relative
# URL shorthands
[url "git@github.com:"]
        insteadOf = "gh:"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
        insteadOf = "github:"
[url "git@gist.github.com:"]
        insteadOf = "gst:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
        insteadOf = "gist:"
[user]
        name = Ron Shapiro
        email = shapiro.rd@gmail.com
[credential]
        helper = osxkeychain
[push]
	default = current
